XF86AudioMute
     $SCRIPTS/shared/volume.sh mute; $APPS/dwm/refreshVolume
     # pactl set-sink-mute 0 toggle

XF86AudioRaiseVolume
     $SCRIPTS/shared/volume.sh up; $APPS/dwm/refreshVolume
     # pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
     $SCRIPTS/shared/volume.sh down; $APPS/dwm/refreshVolume 
     # pactl set-sink-volume 0 -5%

XF86MonBrightnessUp
