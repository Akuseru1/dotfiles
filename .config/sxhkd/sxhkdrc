super + g
    searchBrowser

super + shift + s
	 flatpak --installation=extra run com.spotify.Client 2>/dev/null

super + shift + j
	 st -e joplin 2>/dev/null

super + alt + j
	 $HOME/.joplin/Joplin.AppImage 2>/dev/null

XF86AudioMute
     $SCRIPTS/shared/volume.sh mute; $SCRIPTS/dwm/refreshVolume
     # pactl set-sink-mute 0 toggle

XF86AudioRaiseVolume
     $SCRIPTS/shared/volume.sh up; $SCRIPTS/dwm/refreshVolume
     # pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
     $SCRIPTS/shared/volume.sh down; $SCRIPTS/dwm/refreshVolume 
     # pactl set-sink-volume 0 -5%

XF86MonBrightnessUp
    xbacklight -inc 10

XF86MonBrightnessDown
    xbacklight -dec 10

XF86TouchpadToggle
	synclient TouchpadOff={1,0}

