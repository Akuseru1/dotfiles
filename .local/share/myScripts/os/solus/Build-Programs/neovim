#!/bin/sh

cd "$PROGRAMS"
echo "hello $PROGRAMS"
sudo -u "$1" git clone --depth=1 https://github.com/neovim/neovim
cd neovim
make CMAKE_BUILD_TYPE=RelWithDebInfo
make install

sudo -u "$1" python3 -m pip install --user --upgrade pynvim neovim-remote
sudo -u "$1" python2 -m pip install --user --upgrade pynvim
npm install -g neovim


