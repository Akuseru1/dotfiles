#!/bin/sh

# cd "$PROGRAMS" || exit
eopkg install -y libssh-devel
url="https://github.com/vanhauser-thc/thc-hydra"
latest="$($UTILITIES/programming/github/latestRelease $url)"
name="vanhauser-thc-thc-hydra-fe930f4"
cd /opt
wget -O "$name.tar.gz" $latest
tar kvvxf "$name.tar.gz"
rm "$name.tar.gz"
mv "$name" "hydra"
cd "hydra"
./configure
make
make install

[ -n "$PROGRAMS" ] \
    && ln -sf "/opt/hydra" "$PROGRAMS/hacking/hydra"
