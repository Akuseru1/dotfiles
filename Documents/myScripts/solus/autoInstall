# latex
sudo eopkg -y install texlive

# joplin install 
wget -O - https://raw.githubusercontent.com/laurent22/joplin/master/Joplin_install_and_update.sh | bash
# joplin terminal
NPM_CONFIG_PREFIX=~/.joplin-bin npm install -g joplin
sudo ln -s ~/.joplin-bin/bin/joplin /usr/bin/joplin
#sync terminal joplin https://joplinapp.org/terminal/    if it fails, delete the joplin directory in .config
:config sync.target 7
:sync

# zeal user docsets
sudo npm install --global zeal-user-contrib

#markdown to pdf
sudo eopkg -y install pandoc texlive-fonts-extra

#pdfgrep dependencies, download the tar https://pdfgrep.org/download.html
sudo eopkg -y install libgcrypt-devel poppler-devel


#for emacs (might not need to make them manually)
